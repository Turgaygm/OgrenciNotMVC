@using OgrenciNotMvc.Models.EntityFramework
@model List<TBLNOTLAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Notlar </h2>
<table class="table table-bordered">
    <tr>
        <th>NOT ID</th>
        <th>Öğrenci</th>
        <th>Ders </th>
        <th>Sınav 1</th>
        <th>Sınav 2</th>
        <th>Sınav 3</th>
        <th>Proje</th>
        <th>Ortalama</th>
        <th>Durum</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var snv in Model)
        {
            <tr>
                <td>@snv.NOTID</td>
                <td>@snv.TBLOGRENCILER.OGRAD @snv.TBLOGRENCILER.OGRSOYAD</td>
                <td>@snv.TBLDERSLER.DERSAD</td>
                <td>@snv.SINAV1</td>
                <td>@snv.SINAV2</td>
                <td>@snv.SINAV3</td>
                <td>@snv.PROJE</td>
                <td>@snv.ORTALAMA</td>
                <td>@snv.DURUM</td>
                <td>
                    <a href="/Notlar/NotGetir/@snv.NOTID" class="btn btn-warning">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Notlar/yeniSinav" class="btn btn-primary">Yeni Sınav Kaydı</a>